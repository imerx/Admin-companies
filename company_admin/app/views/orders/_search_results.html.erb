 <% @products.each do |product| %>
  <tr id="<%= product.id %>">
    <td><%= product.code %></td>
    <td><%= product.name %></td>
    <td><%= number_to_currency(product.price, precision: 2) %></td>
    <div class="col-md-2">
    <td>
      <%= button_to 'Agregar al carrito', line_items_path(:product_id => product),
          :remote => true %>
    </td> 
    </div>
  </tr>
 <% end %>
               



