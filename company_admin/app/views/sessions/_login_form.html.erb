
<!--login modal-->
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
  
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h1 class="text-center">Login</h1>
      </div>
      

<%= form_for(:session, url: login_path) do |f| %>

        <div class="modal-body">
          
          <div class="alert alert-danger" role="alert" style="display: none;"></div>
          <div class="form-group">
          </div>
          <div class="form-group">
            <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control input-lg", placeholder: "Password", autocomplete: "off"  %>
          </div>
           <div class="form-group">
             <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
            </div>
        </div>  
    <% end %>
      <div class="modal-footer">
          <div class="col-md-12">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
		  </div>	
      </div>
      
  </div>
  </div>
</div>