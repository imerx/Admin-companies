<% if @user.save %>
  // add the row to the table, show alert and hide modal
  $('table tbody').append(' <%= j render "user_row", user: @user %>');
  $('.alert-success').html("El Usuario ha sido creado con Ã©xito").show();
  $('#user-modal').modal('hide');
<% else %>
