<!-- Update payments and check error  -->

<% if @payment.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('table tbody tr#<%= @payment.id %>').replaceWith(' <%= j render "pay_row", payment: @payment %>');
  $('.alert-success').html("El pago ha sido modificado con Ã©xito").show();
  $('#payment-modal').modal('hide');
<% else %>
  // show first error
  alert('<%= @payment.errors.full_messages[0] %>');
<% end %>