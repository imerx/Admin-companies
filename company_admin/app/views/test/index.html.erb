            <th>check out at</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @orders.each do |order| %>
            <%= render "order_row", order: order %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
