  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Orders</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 text-right">
      <%= link_to "Nuevo order",  new_order_path, remote: true, class: "btn btn-primary" %>
