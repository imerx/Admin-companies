
<div id="product-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= title %></h4>
      </div>
      <!-- start rails code -->
      <%= form_for @product, remote: true do |f| %>
        <div class="modal-body">
          
          <div class="class="alert alert-danger" role="alert" style="display: none;"></div>
          <div class="form-group">
            <%= f.hidden_field :company_id,:value => params[:company_id], class: "form-control input-lg" %>
          </div>
          <div class="form-group">
            <%= f.text_field :code, class: "form-control input-lg", placeholder: "Codigo del producto" %>
          </div>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control input-lg", placeholder: "nombre" %>
          </div>
          <div class="form-group">
            <%= f.text_field :quantity, class: "form-control input-lg", placeholder: "Cantidad" %>
          </div>
          <div class="form-group">
            <%= f.text_field :cost, class: "form-control input-lg", placeholder: "Costo" %>
          </div>
          <div class="form-group">
            <%= f.text_field :price, class: "form-control input-lg", placeholder: "Precio" %>
          </div>
          <div class="form-group">
            <%= f.text_field :description, class: "form-control input-lg", placeholder: "Description" %>
          </div>


        </div>

        <div class="modal-footer">
          <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
      
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->